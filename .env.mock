## Default development users (comment them out to remove)
ADMIN_EMAIL="admin@picaspot.com"
ADMIN_PASSWORD="admin@picaspot.com"
USER_EMAIL="user@picaspot.com"
USER_PASSWORD="user@picaspot.com"

## Backend
BACKEND_PORT_INTERNAL=8080
SECRET_KEY="InsanlySecretKey"
ALGORITHM=HS256
PROJECT_NAME="PicASpot"
BACKEND_CORS_ORIGINS=["http://localhost"]
BACKEND_DEBUG=true
DOMAIN="localhost"
ACCESS_TOKEN_EXPIRE_SECONDS=36000

DEFAULT_AREA_IMAGE_URL="http://localhost/static/img/default/area.png"
DEFAULT_LANDMARK_IMAGE_URL="http://localhost/static/img/default/landmark.png"

## Email Service
EMAIL_SERVICE_NAME="PicASpotEmail"
EMAIL_SERVICE_PORT_INTERNAL=8025

## Image Service
IMAGE_SERVICE_NAME="PicASpotImage"
IMAGE_SERVICE_PORT_INTERNAL=8090

# Email (Mailhog)
SMTP_USER="test@test.com"
SMTP_PASSWORD="password"
EMAILS_FROM_EMAIL="test@out.com"
SMTP_PORT=1025
SMTP_HOST="mailhog"
EMAIL_FROM_NAME="No reply"

# Email paths
EMAIL_VERIFY_PATH="picASpot://verify-email?token="
EMAIL_RESET_PASSWORD_PATH="/auth/reset-password"

# PostgreSQL
POSTGRES_PORT=5432
POSTGRES_PORT_INTERNAL=5432
POSTGRES_DB=pickaspot_db
POSTGRES_USER=admin
POSTGRES_PASSWORD=admin
POSTGRES_HOST=postgres

## NGINX
HTTP_PORT=80
HTTPS_PORT=443

# Mailhog
MAILHOG_UI_PORT_INTERNAL=8025
MAILHOG_PORT_INTERNAL=1025
MAILHOG_PORT=1025

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PORT_INTERNAL=6379
REDIS_PASSWORD="mysecretpassword"

# MinIO
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
MINIO_PORT=9000
MINIO_PORT_INTERNAL=9000
MINIO_CONSOLE_PORT=9001
MINIO_CONSOLE_PORT_INTERNAL=9001
MINIO_BROWSER_REDIRECT_URL=http://localhost/dev/minio
MINIO_DOMAIN=localhost/dev/minio

# MinIO Storage Configuration
MINIO_ENDPOINT=minio1:9000
MINIO_EXTERNAL_ENDPOINT=localhost
MINIO_SECURE=false
MINIO_BUCKET_NAME=picaspot-storage
MINIO_REGION=us-east-1
MINIO_PUBLIC_URL=http://localhost/minio

# Upload Limits (in MB)
MAX_UPLOAD_SIZE_MB=10
MAX_PROFILE_PICTURE_SIZE_MB=5
MAX_LANDMARK_IMAGE_SIZE_MB=10
MAX_UNLOCK_PHOTO_SIZE_MB=15

# Allowed File Types
ALLOWED_IMAGE_EXTENSIONS=["jpg", "jpeg", "png", "webp"]
ALLOWED_MIME_TYPES=["image/jpeg", "image/png", "image/webp"]

# Storage URL Expiry (in seconds)
# 1 hour and 7 days respectively
STORAGE_URL_DEFAULT_EXPIRY_SECONDS=3600
STORAGE_URL_MAX_EXPIRY_SECONDS=604800

# Image Processing Settings
IMAGE_THUMBNAIL_SIZE=[300, 300]
IMAGE_MAX_DIMENSION=2048
IMAGE_QUALITY=85

# Image Service
MAPILLARY_API_KEY="YOUR_MAPILLARY_API_KEY_HERE"

# Static Files Configuration
STATIC_FILES_PATH=/code/static

# Kafka (KRaft cluster)
KAFKA_PORT_INTERNAL=9092
KAFKA_BOOTSTRAP_SERVERS=["kafka-0:9092", "kafka-1:9092", "kafka-2:9092"]

# Kafka UI
KAFKA_UI_PORT_INTERNAL=8000

# Kafka Topics
KAFKA_VERIFICATION_EMAIL_TOPIC="verification-email-requests"
KAFKA_PASSWORD_RESET_EMAIL_TOPIC="password-reset-email-requests"

KAFKA_VERIFY_IMAGE_TOPIC="verify-image-requests"

# Kafka Consumer Group
KAFKA_EMAIL_CONSUMER_GROUP="email-service-consumers"

KAFKA_IMAGE_CONSUMER_GROUP="image-service-consumers"
